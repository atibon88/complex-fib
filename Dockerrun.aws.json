{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "nickchanch/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "nickchanch/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "$REDIS_HOST"
        },
        {
          "name": "REDIS_PORT",
          "value": "$REDIS_PORT"
        },
        {
          "name": "PGUSER",
          "value": "$PGUSER"
        },
        {
          "name": "PGHOST",
          "value": "$PGHOST"
        },
        {
          "name": "PGDATABASE",
          "value": "$PGDATABASE"
        },
        {
          "name": "PGPASSWORD",
          "value": "$PGPASSWORD"
        },
        {
          "name": "PGPORT",
          "value": "$PGPORT"
        }
      ]
    },
    {
      "name": "worker",
      "image": "nickchanch/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "nickchanch/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
